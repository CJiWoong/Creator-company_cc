<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC	"-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.cc.doc.dao.DocDAO">
	<select id="docFormCall" resultType="kr.co.cc.doc.dto.DocFormDTO">
		SELECT * FROM doc_form
	</select>

	<select id="approvalKindCall" resultType="kr.co.cc.doc.dto.ApprovalDTO">
		SELECT * FROM approval
	</select>
	
	<resultMap id="memberMap" type="kr.co.cc.doc.dto.MemberDTO" >
		<id property="id" column="id"/>
		<result property="jobName" column="job_name"/>
		<result property="deptName" column="dept_name"/>
		<result property="password" column="password"/>
		<result property="name" column="name"/>
		<result property="birthDate" column="birth_date"/>
		<result property="hireDate" column="hire_date"/>
		<result property="endDate" column="end_date"/>
		<result property="email" column="email"/>
		<result property="phone" column="phone"/>
		<result property="status" column="status"/>
		<result property="adminChk" column="admin_chk"/>
	</resultMap>

	<select id="memberListCall" resultMap="memberMap">
		SELECT * FROM member
	</select>

	<select id="getMemberInfo" resultMap="memberMap">
		SELECT * FROM member WHERE id=#{param1}
	</select>
	
	<insert 
		id="docWrite"
		useGeneratedKeys="true"
		keyProperty="id"
		keyColumn="id"
		parameterType="kr.co.cc.doc.dto.DocDTO"
	>
		INSERT INTO doc(subject, content, status, doc_form_id, member_id, dept_name, job_name, public_range) 
			VALUES(#{subject}, #{content}, #{status}, #{docFormId}, #{memberId}, #{deptName}, #{jobName}, #{publicRange})
	</insert>

	<insert id="attachmentSave">
		INSERT INTO attachment(ori_file_name, new_file_name, classification, identify_value) 
			VALUES(#{param1}, #{param2}, #{param3}, #{param4})
	</insert>
	
	<insert id="approvalWrite" parameterType="hashmap">
		INSERT INTO doc_status(id, member_id, job_name, dept_name, approval_code, order_rank, approval, read_chk) 
			VALUES(#{id}, #{member_id}, #{job_name}, #{dept_name}, #{approval_code}, #{order_rank}, #{approval}, #{read_chk})
	</insert>
	
	<insert id="docNotice">
		INSERT INTO notice(send_id, receive_id, type, status, identify_value) 
			VALUES(#{param1}, #{param2}, #{param3}, #{param4}, #{param5})
	</insert>


	<select id="getMemberSignFilePath" resultType="string">
		SELECT new_file_name FROM attachment WHERE classification = '서명이미지' AND identify_value = #{param1}
	</select>


	<select id="getApprovalName" resultType="string">
		SELECT name FROM approval WHERE id = #{param1}
	</select>
	
	<resultMap id="docMap" type="kr.co.cc.doc.dto.DocDTO" >
		<id property="id" column="id"/>
		<result property="subject" column="subject"/>
		<result property="content" column="content"/>
		<result property="status" column="status"/>
		<result property="docFormId" column="doc_form_id"/>
		<result property="createDate" column="create_date"/>
		<result property="memberId" column="member_id"/>
		<result property="deptName" column="dept_name"/>
		<result property="jobName" column="job_name"/>
		<result property="publicRange" column="public_range"/>
	</resultMap>
	
	<select id="tempDocList" resultMap="docMap">
		SELECT * FROM doc WHERE member_id = #{param1} AND status = #{param2}
	</select>
	
	<resultMap id="attachmentMap" type="kr.co.cc.doc.dto.AttachmentDTO" >
		<id property="id" column="id"/>
		<result property="oriFileName" column="ori_file_name"/>
		<result property="newFileName" column="new_file_name"/>
		<result property="classification" column="classification"/>
		<result property="identifyValue" column="identify_value"/>		
	</resultMap>
	
	<select id="attachmentListCall" resultMap="attachmentMap">
		SELECT * FROM attachment WHERE classification = '전자문서첨부파일' AND identify_value = #{id}
	</select>	
	
	<select id="getWritedDOC" resultMap="docMap">
		SELECT * FROM doc WHERE id = #{param1}
	</select>
	
	<update id="docWriteETC">
		UPDATE doc SET content = #{param2} WHERE id = #{param1}
	</update>
	
	<delete id="attachmentDelete">
		DELETE FROM attachment WHERE new_file_name = #{param1}
	</delete>
	
	<update id="docUpdate" parameterType="hashmap">
		UPDATE doc SET subject = #{subject}
			, content = #{dateWritedContent}
			, status = #{status}
			, public_range = #{publicRange} 
			, create_date = #{docUpdateTime} 
		WHERE id = #{id}
	</update>
	
	
	
</mapper>